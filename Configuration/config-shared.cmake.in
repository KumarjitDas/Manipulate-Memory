set_and_check(@KDI_LIBRARY_NAME_UPPER@_LIB_DIR     "@PACKAGE_KDI_INSTALL_LIB_DIR@")
set_and_check(@KDI_LIBRARY_NAME_UPPER@_BIN_DIR     "@PACKAGE_KDI_INSTALL_BIN_DIR@")
set_and_check(@KDI_LIBRARY_NAME_UPPER@_INCLUDE_DIR "@PACKAGE_KDI_INSTALL_INCLUDE_DIR@")
