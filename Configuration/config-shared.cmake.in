include("${CMAKE_CURRENT_LIST_DIR}/@KDI_PROJECT_NAME_LOWER@-targets.cmake")

set(@KDI_LIBRARY_NAME_UPPER@_VERSION_MAJOR @ALIGN_MEMORY_VERSION_MAJOR@)
